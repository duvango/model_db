collection(requests)
 {
    id:Long;
    Customer {
        noIdentification: Long;
        firstName:        string;
        lastName:         string;
        phone:            Long;
        email:            string;
        birthDay:         Date;
        Address {
            country: string;
            city:    string;
            address: string;
        }
    }
    requestType:         string;
    description:         string;
    createAt:            Date;
    currentType:         string;
    answer:              string;
    answerAt:            Date;
    statusRequest:       string;
    statusAdvertisement: string;
}

collection(customers)
    {
        noIdentification: Long;
        firstName:        string;
        lastName:         string;
        phone:            Long;
        email:            string;
        birthDay:         Date;
        Address {
            country: string;
            city:    string;
            address: string;
        }
    }
collection(autoincrement)
  {
    id:long,
    name:string
  }    

collection(countries)
  {
    id:long,
    country:string
  }

collection(cities)
  {
    id:long,
    city:string
  }
